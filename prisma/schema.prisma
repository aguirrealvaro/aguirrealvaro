// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  views     View[]
  likes     Like[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug      String   @unique
  views     View[]
  likes     Like[]
}

model View {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // View 1 - M Session (A session has multiple views)
  session   Session @relation(fields: [sessionId], references: [id])
  sessionId String

  // View 1 - M Post (A post has multiple views)
  post   Post @relation(fields: [postId], references: [id])
  postId Int

  @@index([sessionId])
  @@index([postId])
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Like 1 - M Session (A session has multiple likes)
  session   Session @relation(fields: [sessionId], references: [id])
  sessionId String

  // Like 1 - M Post (A post has multiple likes)
  post   Post @relation(fields: [postId], references: [id])
  postId Int

  @@index([sessionId])
  @@index([postId])
}
